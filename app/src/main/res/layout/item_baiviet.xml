<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Ảnh phía trên -->
    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/images" />
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="14sp"
        android:textColor="#4e4b66"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <!-- TextView bên trái phía dưới ảnh -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- TextView dòng phía dưới TextView đầu tiên -->


    <!-- Layout nằm ngang ở dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Logo và chữ bên trái -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Logo -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_avatar"
                android:layout_gravity="center"/>


            <!-- Chữ bên cạnh logo -->
            <TextView
                android:id="@+id/textViewLogoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC New"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="#4e4b66" />
        </LinearLayout>

        <!-- Khoảng trống để đẩy icon sang bên phải -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- 3 Icone bên phải -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icone 1 -->
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chat" />

            <!-- Icone 2 -->
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/save"
                android:layout_marginStart="16dp" />

            <!-- Icone 3 -->
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dots"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
