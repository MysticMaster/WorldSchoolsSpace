<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền cho SearchView -->
    <solid android:color="#FFFFFF" />

    <!-- Đường viền của SearchView -->
    <stroke
        android:width="1dp"
        android:color="#C0C0C0" />

    <!-- Bo góc cho SearchView -->
    <corners android:radius="10dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
